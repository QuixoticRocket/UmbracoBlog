@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<div class="container">
    <div class="col-md-2 pull-left"></div>
    <div class="col-md-2 pull-right"></div>
    <div class="col-md-8">
        <div>
            @CurrentPage.bodyText
        </div>
        <div class="bg-info">
            @{ 
                string[] tags = string.IsNullOrWhiteSpace(CurrentPage.contentTags) ? new string[0] : CurrentPage.contentTags.Split(',');
                tags = tags.OrderBy(x => x).ToArray();
                if(tags.Length > 0)
                {
                    <span>Tags: </span>
                    for (int i = 0; i < tags.Length; i++)
                    {
                        if (i != tags.Length - 1)
                        {
                            <span><a href="~/Search?query=@tags[i]">@tags[i]</a>, </span>
                        }
                        else
                        {
                            <span><a href="~/Search?query=@tags[i]">@tags[i]</a></span>
                        }
                    }
                }
            }
        </div>
    </div>
</div>